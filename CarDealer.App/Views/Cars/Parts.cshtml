@model IEnumerable<CarsWithPartsModel>

@{
    ViewData["Title"] = "All Cars With Their Parts";
}

<h2>
    @ViewData["Title"]
    <a href="/cars/create" class="btn btn-primary">Add Car</a>
</h2>

<table class="table table-bordered table-hover">
    <thead>
        <tr>
            <th>
                Make
            </th>
            <th>
                Model
            </th>
            <th>
                Travelled Distance
            </th>
            <th>
                Parts
            </th>
        </tr>
    </thead>
    <tbody>
        @foreach (var car in Model)
        {
            <tr>
                <th>
                    <a href="/cars/@car.Make">@car.Make</a>
                </th>
                <th>
                    @car.Model
                </th>
                <th>
                    @(car.TravelledDistance / 1000) KM
                </th>
                <th>
                    @foreach (var part in car.Parts)
                    {
                        @part.Name <text> - </text> @part.Price.ToPrice();
                        <br />
                    }
                </th>
            </tr>
        }
    </tbody>
</table>